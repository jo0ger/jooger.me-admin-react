@import '../../styles/vars/index'
@import '../../styles/mixins/index'

.page {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: $white;

  &_left {
    position: relative;
    width: $page-left-width;
    height: 100%;
    border-right: 1px solid $border-color-base;
  }

  &_right {
    position: absolute;
    left: $page-left-width;
    top: 0;
    right: 0;
    bottom: 0;
  }

}
