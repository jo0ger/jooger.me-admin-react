@import '../../../../styles/vars/index'
@import '../../../../styles/mixins/index'

.article_comments {
  position: relative;
  width: 688px;
  height: 100%;
  overflow: hidden;
  box-shadow: $box-shadow-base;
  border: none;
  z-index: $zindex-base;

  .close_btn {
    margin-left: $base-margin;
    cursor: pointer;
    transition: $transition-ease-out;

    &:hover {
      color: $blue-6;
    }

  }

  .list_wrapper {
    full()
  }

  :global {
    .ant-card-body {
      position: relative;
      height: calc(100% - 48px);
      padding: 0;
      overflow-x: hidden;
      overflow-y: auto;
    }
  }

}
