@import '../../../../styles/vars/index'

:global {
  .custom-filter-dropdown {
    padding: 8px;
    background-color: $white;
    border-radius: 6px;
    box-shadow: 0 1px 6px alpha($black, .2);

    input {
      width: 130px;
      margin-right: 8px;
    }
    
  }
}

.page-articles {
  position: relative;
  background-color: $white;

  .article-count {
    margin-left: 8px;
  }

  .article-list {

    .title-actions, .title-search {
      display: inline-block;
    }

    .title-search {
      float: right;
    }

    .title-actions, .list-actions {
      button {
        margin-right: 5px;

        &:last-child {
          margin-right: 0;
        }

      }
    }
    
    .action-column {
      text-align: center;
    }

  }  
}
