@import '../../../../styles/vars/index'

.page-article-edit {
  position: relative;

  .info-title {
    position: relative;


  }

  .action-btns {
    left: 50%;
    margin-top: 16px;
    transform: translateX(-50%);
  }

  .state-checked {
    color: $white;

    &.publish-state {
      border-color: $green-6;
      box-shadow: -1px 0 0 0 $green-6;
      background-color: $green-6;
    }

    &.draft-state {
      border-color: $yellow-6;
      box-shadow: -1px 0 0 0 $yellow-6;
      background-color: $yellow-6;
    }

    &.delete-state {
      border-color: $red-6;
      box-shadow: -1px 0 0 0 $red-6;
      background-color: $red-6;
    }
  }

  .extends-item {
    margin-bottom: 8px;

    .extends-delete-btn {
      cursor: pointer;
      position: relative;
      top: 4px;
      font-size: 20px;
      color: $grey-6;
      transition: all .3s;

      &:hover {
        color: $red-6;
      }
    }
  }

}
